@model IEnumerable<Kadry.Models.Pracownik>

@{
    ViewBag.Title = "Lista Pracowników";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista pracowników</h2>

@if (Model.Count() == 0)
{
    <p>
        Brak Pracowników
    </p>
}
else
{
    <table>
        <tr>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Wiek</th>
            <th>Stanowisko</th>
            <th>Data Zatrudnienia</th>
            <th>Adres Email</th>
        </tr>
        @foreach (var pracownik in Model)
        {
            <tr>
                <td>@Html.Encode(pracownik.Imie)</td>
                <td>@Html.Encode(pracownik.Nazwisko)</td>
                <td>@Html.Encode(pracownik.Wiek)</td>
                <td>@Html.Encode(pracownik.Stanowisko)</td>
                <td>@Html.Encode(pracownik.DataZatrudnienia.ToShortDateString())</td>
                <td>@Html.Encode(pracownik.Email)</td>
            </tr>
        }
    </table>    
}
<p>
    @Html.ActionLink("Utwórz nowego pracownika", "UtworzPracownika")
</p>